<odoo>
    <data>
        <record model="ir.ui.view" id= 'Rejection_wizard'>
            <field name="name">Rejection_Reason</field>
            <field name="model">purchase.request.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="RejectionReason"/>

                    </group>
                    <footer>

                        <button name="action_confirm_rejection" string="confirm" type="object"/>

                        <button string="Cancel" special="cancel" name="cancel" />

                    </footer>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="Rejection_action_window">
            <field name="name">Rejection Reason</field>
<!--            <field name="type">ir.actions.act_window</field>-->
            <field name="res_model">purchase.request.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="Rejection_wizard"/>
            <field name="target">new</field>
        </record>


    </data>
</odoo>