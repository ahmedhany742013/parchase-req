<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="purchase_ahmed.form">
            <field name="name">purchase_ahmed list</field>
            <field name="model">purchase_ahmed.purchase_ahmed</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="company_id" invisible='1'/>
                            <field name="currency_id" invisible='1'/>
                            <field name="Request_name"/>
                            <field name="RequestedBy_id"/>
                            <field name="StartDate"/>
                            <field name="EndDate"/>
                            <field name="RejectionReason"/>
                            <field name="orderlines"/>
                            <field name="TotalPrice"/>
                            <field name="state"/>
                            <button name="Submit_for_Approval" type="object" string="Submit for Approval" states="draft"/>
                            <button name="cancel" type="object" string="cancel" states="draft"/>
                            <button name="send_email_templete" type="object" string="Approval" states="to be approved"/>
                            <button name="%(Rejection_action_window)d" type="action" string="Reject" states="to be approved"/>
                            <button name="reset" type="object" string="Reset" states="Cancel"/>
                            <button name="draft" type="object" string="draft" states="Cancel"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="purchase_ahmed.list">
            <field name="name">purchase_ahmed list</field>
            <field name="model">purchase_ahmed.purchase_ahmed</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="company_id" invisible='1'/>
                    <field name="currency_id" invisible='1'/>
                    <field name="Request_name"/>
                    <field name="RequestedBy_id"/>
                    <field name="StartDate"/>
                    <field name="EndDate"/>
                    <field name="RejectionReason"/>
                    <field name="orderlines"/>
                    <field name="TotalPrice"/>
                    <field name="state"/>


                </tree>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="purchase_ahmed.action_window">
            <field name="name">purchase Ahmed</field>
            <field name="res_model">purchase_ahmed.purchase_ahmed</field>
            <field name="view_mode">tree,form</field>
        </record>










        <menuitem name="Purchase Requests" id="purchase_ahmed_menu_root" sequence="1"/>



        <menuitem name="Purchase" id="purchase_ahmed_menu_1" parent="purchase_ahmed_menu_root" sequence="1"/>
        <menuitem name="Purchase Requests" id="purchase_ahmed_menu_3" parent="purchase_ahmed_menu_1" sequence="1"
                  action="purchase_ahmed.action_window"/>

    </data>
</odoo>